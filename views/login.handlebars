<div class="card customcard backgroundgreen" style="width:100%">
    <div class="card-title position-absolute backgroundbrown textgreen top-0 start-0" style="width: 100%">Login
    </div>
    <form action="#" id="login">
        <div class="mb-3 backgroundgreen center margintop25" style="width: 95%">
            <label for="usernameInput" class="form-label backgroundgreen">Username</label>
            <input type="text" class="form-control" id="usernameInput" placeholder="john@domain.com" required>
        </div>
        <div class="mb-3 backgroundgreen center" style="width: 95%">
            <label for="passwordInput" class="form-label backgroundgreen">Password</label>
            <input type="password" class="form-control" id="passwordInput" placeholder="input password" required>
            <span id="togglePassword" class="fa fa-eye-slash"></span>
        </div>
        <button type="submit" class="btn btn-secondary center" style="width: 95%">Login!</button>
    </form>
    <span id="error_message" class="textred"></span>
    <p></p>
    <a href="./signup">Sign up instead</a>
</div>

<script src="/js/login.js"></script>